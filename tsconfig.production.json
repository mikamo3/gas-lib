{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["__tests__", "dist"]
}
